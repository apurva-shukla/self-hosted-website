{
  "colors": {
    "background": "#ffffff",
    "text": "#1a1a1a",
    "links": {
      "default": "#b33a3a",
      "hover": "#8c2e2e"
    },
    "palette": [
      "#b33a3a",
      "#f5f4f1",
      "#666666",
      "#111111"
    ],
    "specialElements": {
      "heading": {
        "primary": "#1a1a1a",
        "accent": "#b33a3a"
      },
      "date": "#666666",
      "separator": "#dddddd",
      "blockquote": "#f5f4f1"
    }
  },
  "typography": {
    "body": {
      "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
      "fontSize": "18px",
      "fontWeight": "400",
      "lineHeight": "1.6",
      "letterSpacing": "normal"
    },
    "headings": {
      "h1": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
        "fontSize": "42px",
        "fontWeight": "700",
        "lineHeight": "1.2",
        "marginBottom": "16px"
      },
      "h3": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
        "fontSize": "24px",
        "fontWeight": "600",
        "lineHeight": "1.3",
        "marginTop": "36px",
        "marginBottom": "12px"
      }
    },
    "paragraph": {
      "fontSize": "18px",
      "lineHeight": "1.6",
      "marginBottom": "24px",
      "fontWeight": "400"
    },
    "link": {
      "textDecoration": "underline",
      "textDecorationColor": "#b33a3a",
      "fontWeight": "400"
    },
    "emphasis": {
      "fontStyle": "italic"
    },
    "strong": {
      "fontWeight": "700"
    },
    "date": {
      "fontSize": "14px",
      "color": "#666666",
      "textTransform": "uppercase",
      "fontWeight": "500",
      "letterSpacing": "0.5px"
    }
  },
  "spacing": {
    "container": {
      "maxWidth": "700px",
      "margin": "0 auto",
      "padding": "0 20px"
    },
    "body": {
      "margin": "0",
      "padding": "0"
    },
    "elements": {
      "heading": {
        "marginBottom": "16px"
      },
      "paragraph": {
        "marginBottom": "24px"
      },
      "list": {
        "marginBottom": "24px",
        "paddingLeft": "24px"
      },
      "header": {
        "marginBottom": "40px",
        "paddingTop": "40px"
      },
      "footer": {
        "marginTop": "60px",
        "paddingBottom": "40px"
      }
    }
  },
  "layout": {
    "containerWidth": "700px",
    "navigation": {
      "display": "flex",
      "justifyContent": "space-between",
      "alignItems": "center",
      "marginBottom": "40px"
    },
    "header": {
      "display": "flex",
      "flexDirection": "column"
    },
    "article": {
      "marginBottom": "80px"
    },
    "footer": {
      "display": "flex",
      "gap": "20px",
      "justifyContent": "flex-start"
    }
  },
  "specialElements": {
    "separator": {
      "border": "none",
      "borderTop": "1px solid #dddddd",
      "margin": "40px 0"
    },
    "navLinks": {
      "display": "flex",
      "gap": "24px"
    },
    "headerLogo": {
      "border": "1px solid #dddddd",
      "borderRadius": "4px",
      "padding": "8px 12px"
    },
    "codeBlock": {
      "backgroundColor": "#f5f4f1",
      "fontFamily": "monospace",
      "padding": "16px",
      "borderRadius": "4px",
      "fontSize": "16px",
      "lineHeight": "1.5",
      "overflowX": "auto"
    }
  }
}